<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>J2EE Web application for BiscaJE</display-name>
    <servlet>

        <servlet-name>jersey-bisca-container</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>
                com.steelzack.biscaje.entities,
                com.steelzack.biscaje.server,
                com.steelzack.biscaje.service,
                com.steelzack.biscaje.binders,
                com.steelzack.biscaje.security,
                com.fasterxml.jackson.jaxrs.json,
            </param-value>
        </init-param>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.steelzack.biscaje.binders.BiscaJEApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>

    </servlet>
    <servlet-mapping>
        <servlet-name>jersey-bisca-container</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
</web-app>
