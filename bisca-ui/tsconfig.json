{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution" : "node"
  },
  "files": [
    "typings/tsd.d.ts",
    "app/app.ts",
    "app/main.ts",
    "app/game.ts",
    "app/app.game.ts",
    "app/app.component.ts",
    "app/app.constants.ts",
    "home/home.ts",
    "login/login.ts",
    "signup/signup.ts",
    "index.ts",
    "common/headers.ts"
  ],
    "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": true }
}
